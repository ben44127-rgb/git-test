# ==========================================
# Django 圖片處理服務環境變數配置
# ==========================================

# Django 應用配置
DEBUG=False
DJANGO_SECRET_KEY=change-this-secret-key-in-production-please-use-random-string

# 開發模式配置（Docker 環境）
# 設為 true 啟用 hot reload
DJANGO_DEV_MODE=false

# MinIO 物件儲存配置
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=processed-images
MINIO_SECURE=False

# AI 後端服務配置
AI_BACKEND_URL=http://localhost:8002/api/remove_bg

# 檔案上傳配置
MAX_UPLOAD_SIZE=10485760

# CORS 配置
CORS_ALLOW_ALL_ORIGINS=True
