# ==========================================
# Django 圖片處理服務環境變數配置範本
# ==========================================
# 複製此檔案為 .env 並根據您的環境修改相應的值

# Django 應用配置
DEBUG=False
DJANGO_SECRET_KEY=change-this-secret-key-in-production-please-use-random-string

# MinIO 物件儲存配置
# 本地開發使用 localhost，Docker 環境會自動覆蓋為服務名稱
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=processed-images
MINIO_SECURE=False

# AI 後端服務配置
# 請根據實際 AI 服務位址修改
# 範例：http://192.168.1.100:8002/api/remove_bg
AI_BACKEND_URL=http://192.168.233.128:8002/api/remove_bg

# 檔案上傳配置（10MB）
MAX_UPLOAD_SIZE=10485760

# CORS 配置
CORS_ALLOW_ALL_ORIGINS=True

# 輸出檔案路徑
OUTPUT_DIR=./output
